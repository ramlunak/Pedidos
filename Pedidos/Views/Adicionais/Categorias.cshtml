@model IEnumerable<Pedidos.Models.DTO.ListarCategoriasPorAdicional>
<div class="card">
    <div class="card-header">
        <div class="row d-flex justify-content-between p-2">
            <div>
                <b>MOSTRAR ADICIONALES EN CATEGORÍA</b>
            </div>
        </div>

    </div>
    <div class="card-body">


        <table class="table">
            <thead>
                <tr>
                    <th>
                        Categoría
                    </th>
                    <th>

                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="w-100">
                            @Html.DisplayFor(modelItem => item.categoria)
                        </td>
                        <td>
                            <div class="d-flex">
                                <input name="switchbuttonSelected" type="checkbox" asp-for="@item.selected" id="@($"{item.idAdicional}_{item.idCategoria}")" data-width="100" data-onlabel="Mostrar" data-offlabel="Ocultar" data-toggle="switchbutton" data-offstyle="danger" data-size="sm">
                                <div id="@($"loading{item.idAdicional}_{item.idCategoria}")" class="hide-loading spinner-border text-info ml-2" role="status">
                                    <span class="sr-only">Loading...</span>
                                </div>
                            </div>
                        </td>
                        <td>
                            @*<a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>*@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/views/adicionais/categoria.js"></script>