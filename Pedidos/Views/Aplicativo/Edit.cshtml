@model Pedidos.Models.P_Aplicativo

@{
    ViewData["Title"] = "Editar";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" asp-route-pagina="@ViewBag.Pagina">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input asp-for="idCuenta" hidden class="form-control" />

            <div class="form-group">                
                <input asp-for="nombre" class="form-control" placeholder="Nome"/>
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="activo" /> @Html.DisplayNameFor(model => model.activo)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm form-control form-control-sm mb-2" />
                <a class="btn btn-danger btn-sm form-control form-control-sm" asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
