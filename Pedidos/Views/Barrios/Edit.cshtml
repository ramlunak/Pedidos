@model Pedidos.Models.P_Barrio

@{
    ViewData["Title"] = "Edit";
}

<div class="mb-3"></div>

<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-4">
        <form asp-action="Edit">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="id" hidden class="form-control" />
            <input asp-for="idCuenta" hidden class="form-control" />

            <div class="form-group">
                <label class="control-label">Estado</label>
                <input asp-for="estado" maxlength="2" class="form-control text-uppercase" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Municipio</label>
                <input asp-for="municipio" class="form-control" />
                <span asp-validation-for="municipio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Barrio</label>
                <input asp-for="nombre" class="form-control" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                        <span class="input-group-text">R$</span>
                    </div>
                    <input id="txtTasa" asp-for="tasa" placeholder="Taxa" class="form-control form-control-sm" />
                </div>
                <span asp-validation-for="tasa" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="activo" /> @Html.DisplayNameFor(model => model.activo)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm form-control form-control-sm mb-2" />
                <a class="btn btn-danger btn-sm form-control form-control-sm" asp-action="Index">Cancelar</a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/views/barrio/edit.js"></script>