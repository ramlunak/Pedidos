@model Pedidos.Models.P_Caja

@{
    ViewData["Title"] = "Abrir";
}

<div class="row m-3"></div>

<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-4">
        <form asp-action="Abrir">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend">
                        <span class="input-group-text">R$</span>
                    </div>
                    <input id="txtValor" asp-for="inicio" placeholder="Valor inicial" class="form-control form-control-sm inputDecimal" />

                </div>
                <span asp-validation-for="inicio" class="text-danger"></span>

            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm form-control form-control-sm mb-2" />
                <a class="btn btn-danger btn-sm form-control form-control-sm" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/jquery.mask.js"></script>
<script src="~/js/views/caja/abrir.js"></script>
