@model IEnumerable<Pedidos.Models.P_Categoria>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutQR.cshtml";
}

@if (ViewBag.Erro != null)
{
    <div class="container m-1">
        <div class="alert alert-danger">@ViewBag.Erro</div>
    </div>
}

<div>
    @if (Model != null)
        @foreach (var item in Model)
        {
            <div class="accordion" id="accordionCategorias">

                <div class="card">
                    <div class="card-header cursor-pointer d-flex justify-content-center" id="heading_@item.id" data-toggle="collapse" data-target="#collapse_@item.id" aria-expanded="true" aria-controls="collapse_@item.id">
                        <h5 class="mb-0">
                            @item.nombre
                        </h5>
                    </div>

                    <div id="collapse_@item.id" class="collapse hide collapseCategoria" aria-labelledby="heading_@item.id" data-parent="#accordionCategorias">
                        <div class="card-body">

                            @*MODAL DETALLES PRODUCTO*@

                            @*LISTA PRODUCTOS*@
                            <table class="table" id="tableProductosCategoria_@item.id" width="100%" cellspacing="0" cellpadding="0">
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        }
</div>

