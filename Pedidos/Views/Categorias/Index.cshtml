@model Pedidos.ViewModels.VMCategorias

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-center align-items-center w-100">
    <div style="background-color:lightgray;width:100%;height:1px"></div>
    <div style="margin:5px"> Categorias</div>
    <div style="background-color:lightgray;width:100%;height:1px"></div>
</div>

<div class="d-flex justify-content-between m-1">
    <div class="btn btn-sm btn-primary"><a style="color:white" asp-action="Create">Nova Categoria</a></div>
    <div>
        <!-- Search form -->
        <form>
            <div class="d-flex align-items-center">
                <input id="nombre" name="nombre" value="@ViewBag.FlrNombre" class="form-control form-control-sm  w-100" type="text" placeholder="Buscar"
                       aria-label="Search">
                <button style="background-color:transparent;border-color:transparent">  <i class="fa fa-search-plus"></i></button>
                <button style="background-color:transparent;border-color:transparent">  <i class="fa fa-trash" aria-hidden="true"></i></button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Categorias.First().nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categorias.First().activo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Categorias)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.activo)
                </td>
                <td>
                    <div style="margin-top:5px">
                        <div class="btn btn-sm btn-success"><a style="color:white" asp-action="Edit" asp-route-pagina="@Model.PaginaActual" asp-route-id="@item.id">Editar</a></div>  |
                        <div class="btn btn-sm btn-danger"><a style="color:white" asp-action="Delete" asp-route-pagina="@Model.PaginaActual" asp-route-id="@item.id">Deletar</a></div>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-end">
    @{ Html.RenderPartial("_Paginador");}
</div>