@model Pedidos.ViewModels.VMCategorias
@{
    ViewData["Title"] = "Index";}

<div class="card m-2">
    <div class="card-header">
        <div class="row d-flex justify-content-between p-2">
            <div>
                <a class="btn btn-sm btn-primary" asp-action="Create">NOVA CATEGORÍA</a>
            </div>
            <div>
                <form id="formSearchCategoria">
                    <div class="d-flex align-items-center">
                        <input id="nombre" name="nombre" value="@ViewBag.FlrNombre" class="form-control form-control-sm  w-100" type="text" placeholder="Buscar"
                               aria-label="Search">
                        <button class="btn btn-sm btn-outline-primary"><i class="fa fa-search"></i></button>
                        <div onclick="LimpiarNombre()" class="btn btn-sm btn-outline-danger cursor-pointer"><i class="fa fa-ban" aria-hidden="true"></i></div>

                    </div>
                </form>
            </div>
        </div>

    </div>
    <div class="card-body">

        <table class="table">
            <thead>
                <tr>
                    <th class="col-8">
                        @Html.DisplayNameFor(model => model.Categorias.First().nombre)
                    </th>
                    @*<th class="col-4">

                    </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Categorias)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>
                        @*<td>
                            <a class="nav-link text-dark" title="Sub Categorias" asp-area="" asp-route-idCategoria="@item.id" asp-controller="SubCategorias" asp-action="Index">
                                <i class="fa fa-list-ul" aria-hidden="true"></i>
                            </a>
                        </td>*@
                        <td>
                            <div class="text-nowrap">
                                <a asp-action="Edit" asp-route-pagina="@Model.PaginaActual" asp-route-id="@item.id"><i style="color:forestgreen" class="fa fa-edit"></i></a> |
                                <a asp-action="Delete" asp-route-pagina="@Model.PaginaActual" asp-route-id="@item.id"><i style="color:orangered" class="fa fa-trash"></i></a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<div class="d-flex justify-content-end">
    @{ Html.RenderPartial("_Paginador");}
</div>

@section Scripts{
    <script type="text/javascript">

        function LimpiarNombre() {
            $('#nombre').val('');
            $('#formSearchCategoria').submit();
        }

        $(document).ready(function () {



            $('#txtChild1').on('change', function () {
                $("#C1Age1").show();
            });

        });
    </script>
}
