@model Pedidos.Models.P_Direcciones

@{
    ViewData["Title"] = "Deletar";
}

<h5>Deletar</h5>
<div>
    <h6>Está seguro que deseja apagar este Endereço?</h6>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.text)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-route-idCliente="@Model.idCliente" asp-action="Index">Voltar</a>
    </form>
</div>
