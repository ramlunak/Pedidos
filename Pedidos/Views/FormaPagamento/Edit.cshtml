@model Pedidos.Models.P_FormaPagamento

@{
    ViewData["Title"] = "Edit";
}

<div class="row m-3"></div>

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <input type="hidden" class="form-check-input" asp-for="activo" />
            <input type="hidden" asp-for="idCuenta" class="form-control" />
            <input type="hidden" asp-for="app" class="form-control" />
            <input type="hidden" asp-for="idAplicativo" class="form-control" />

            <div class="form-group">
                <input asp-for="nombre" class="form-control form-control-sm" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="input-group input-group-sm mb-3">
                    <input id="inputTasa" asp-for="tasa" class="form-control form-control-sm" placeholder="Taxa" />
                    <div class="input-group-append">
                        <span class="input-group-text">%</span>
                    </div>
                </div>
                <span asp-validation-for="tasa" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm form-control form-control-sm mb-2" />
                <a class="btn btn-danger btn-sm form-control form-control-sm" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/lib/jquery/jquery.mask.js"></script>
    <script src="~/js/views/formaPagamento/edit.js"></script>
}
