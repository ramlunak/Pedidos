@***************@
<div hidden>

    @*CLIENTE*@
    <div class="row">
        <div class="row col-12">
            @*RUA*@
            <div class="col-md-8">
                <div class="form-group">
                    <input type="search" id="browserInputCliente" list="ClienteList" placeholder="Cliente" class="form-control" />
