
@{
    ViewData["Title"] = "ReporteDePedidos";
}

<div id="content">

    <div class="row col-12 p-1 d-flex justify-content-end">
        <button v-on:click="ShowModalFiltro" class="btn btn-sm btn-outline-info"><i class="fas fa-filter cursor-pointer" data-toggle="tooltip" data-placement="top" title="Filtro"></i></button>
    </div>

    <hr />

    @*IF LOADING*@
    <div v-if="isLoading">
        <div class="spinner-border text-warning m-2" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    @*IF NOT LOADING*@
    <template v-else>

        <div class="m-4 pr-3 pl-3" style="font-size:14px">

            <div class="row" v-for="pedido in ListaPedidos">
                <div class="w-100 mb-2">
                    <div class="card-header p-1">
                        <div class="d-flex justify-content-between" style="font-weight:600">
                            <div class="mr-2">
                                <div class="d-block">
                                    <div>{{pedido.codigo}}</div>
                                    <div v-if="pedido.cliente">{{pedido.cliente}}</div>
                                    <div v-if="pedido.idMesa"> Mesa {{pedido.idMesa}}</div>
                                    <div v-if="pedido.aplicativo"> Mesa {{pedido.aplicativo}}</div>
                                </div>
                            </div>
                            <div class="mr-2">
                                <div class="d-flex">
                                    <div class="btn btn-sm text-primary"><i class="fas fa-motorcycle"></i> R$ {{pedido.tasaEntrega.toFixed(2)}}</div>
                                    <div class="btn btn-sm text-danger"><i class="fas fa-minus"></i> R$ {{pedido.descuento.toFixed(2)}}</div>
                                    <div class="btn btn-sm text-success"><i class="fas fa-hand-holding-usd"></i> <strong> R$ {{(pedido.valorProductos + pedido.tasaEntrega - pedido.descuento).toFixed(2)}}</strong></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="p-1">
                        <div class="row col-12 ml-2" v-for="producto in pedido.productos">
                            <div class="w-100">
                                
                                <div class="d-flex justify-content-between w-100" style="font-size:15px;font-family:'Times New Roman', Times, serif">
                                    <div class="mr-2">{{producto.nombre}}</div>
                                    <div> R$ {{producto.valorMasAdicionales.toFixed(2)}}</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @if (@ViewBag.Total != null) { 
                <div class="d-flex justify-content-end">
                    <div>R$ @ViewBag.Total.ToString("F2")</div>
                </div>
                }
            </div>

        </div>

    </template>

    <!-- Modal -->
    <div class="modal fade" id="modalFiltroReporteDePedidos" tabindex="-1" role="dialog" aria-labelledby="modalFiltroReporteDePedidosTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalFiltroReporteDePedidosTitle">Filtrar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="form-group">

                        <div class="m-1">
                            <label>Data Inicio</label>
                            <input id="inputFechaInicio" name="inputFechaInicio" type="datetime-local" class="form-control" />
                        </div>

                        <div class="m-1">
                            <label>Data Fim</label>
                            <input id="inputFechaFin" name="inputFechaFin" type="datetime-local" class="form-control" />
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="CargarReporteDePedidos()">Filtrar</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <script src="~/js/views/reportes/vue_reporteDePedidos.js"></script>
}
