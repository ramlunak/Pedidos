@model IEnumerable<Pedidos.Models.P_Sabor>

@{
    ViewData["Title"] = "Index";
}
<div class="card m-2">
    <div class="card-header">
        <div class="row d-flex justify-content-between p-2">
            <div>
                <b>SABORES</b>
            </div>
            <div>
                <a class="btn btn-sm btn-primary" asp-action="Create">Novo</a>
            </div>
        </div>

    </div>
    <div class="card-body">

        <table class="table" cellspacing="10">
            <thead>
                <tr>
                    <th>
                        Nome
                    </th>
                    <th>
                        Valor
                    </th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td style="width:100%">
                            @Html.DisplayFor(modelItem => item.nombre)
                        </td>

                        <td style="width:auto">
                            <div style="width:100px;color:darkgoldenrod" class="d-flex justify-content-start"><b>R$ @(item.valor.HasValue ? $"{item.valor.Value.ToString("f2")}":0.ToString("F2"))</b></div>
                        </td>

                        <td>
                            <input name="switchbuttonActivo" type="checkbox" asp-for="@item.activo" id="@item.id" data-onlabel="Ativo" data-offlabel="Inativo" data-toggle="switchbutton" data-offstyle="danger" data-size="xs">
                        </td>

                        <td>
                            <div class="text-nowrap">
                                <a asp-action="Edit" asp-route-id="@item.id"><i style="color:forestgreen" class="fa fa-edit"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.id"><i style="color:orangered" class="fa fa-trash"></i></a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>


    </div>
</div>
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/js/views/sabores/index.js"></script>