@model Pedidos.Models.P_SalidaCaja


<div class="row m-3"></div>

<div class="row d-flex justify-content-center">
    <div class="col-12 col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <div class="form-group">
                    <input type="search" id="browserInputMotivo" list="MotivoList" placeholder="Motivo" class="form-control" />
                    <datalist id="MotivoList">
                        @if (ViewBag.Motivos != null)
                        {
                            @foreach (var Motivo in ViewBag.Motivos)
                            {
                                <option id="@(Motivo.id)" value="@(Motivo.motivo)"></option>
                            }
                        }
                    </datalist>
                    <input id="idMotivo" asp-for="idMotivo" hidden class="form-control" />
                    <span asp-validation-for="idMotivo" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input asp-for="valor" class="form-control inputDecimal" placeholder="Valor" />
                <span asp-validation-for="valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary btn-sm form-control form-control-sm mb-2" />
                <a class="btn btn-danger btn-sm form-control form-control-sm" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/jquery.mask.js"></script>
<script src="~/js/views/salidaCaja/create.js"></script>
