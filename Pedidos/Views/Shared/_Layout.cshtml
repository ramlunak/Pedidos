        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-1">
            <div class="container">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">(Nome??)</a>*@
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="nav navbar-nav navbar-right">
                        @*<li class="nav-item"><a class="nav-link text-dark"> @ViewData["Nombre"]</a></li>*@
                        <li class="nav-item d-flex">
                            @*<a class="nav-link text-dark cursor-pointer text-primary" data-toggle="tooltip" data-placement="top" title="Perfil">
                                    <i class="fas fa-user-circle fa-2x"></i>
                                </a>*@
                            <a class="nav-link text-dark cursor-pointer text-primary" data-toggle="tooltip" data-placement="top" title="Informar Bug" asp-controller="Mejorias" asp-action="Index">
                                <i class="fas fa-bug fa-2x"></i>
                            </a>
                            <a class="nav-link text-dark" data-toggle="tooltip" data-placement="top" title="Sair" asp-controller="Login" asp-action="Salir">
                                <i class="fas fa-sign-out-alt fa-2x"></i>
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Home" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa fa-home fa-2x" aria-hidden="true"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Clientes" asp-area="" asp-controller="Clientes" asp-action="Index">
                                <i class="fas fa-users fa-2x"></i>
                            </a>
                        </li>

                        @*<li class="nav-item">
                                <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Produtos" asp-area="" asp-controller="Productos" asp-action="Index">
                                    <i class="fas fa-hamburger fa-2x"></i>
                                </a>
                            </li>*@

                        <li class="nav-item dropdown" data-toggle="tooltip" data-placement="right" title="Área de produtos">
                            <a class="m-1 nav-link  dropdown-toggle text-dark btn btn-outline-primary" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-hamburger fa-2x"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Categorias" asp-action="Index">
                                    <i class="fas fa-project-diagram fa-1x mr-2"></i>Categorias
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Adicionais" asp-action="Index">
                                    <i class="fab fa-buffer fa-1x mr-2"></i>Adicionais
                                </a>
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Ingredientes" asp-action="Index">
                                    <i class="fas fa-carrot fa-1x mr-2"></i>Ingredientes
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Productos" asp-action="Index">
                                    <i class="fas fa-hamburger fa-1x mr-2"></i>Produtos
                                </a>
                            </div>
                        </li>

                        @*<li class="nav-item">
                                <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Categoría" asp-area="" asp-controller="Categorias" asp-action="Index">
                                    <i class="fas fa-project-diagram fa-2x"></i>
                                </a>
                            </li>*@
                        @*<li class="nav-item">
                                <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Adicionais" asp-area="" asp-controller="Adicionais" asp-action="Index">
                                    <i class="fab fa-buffer fa-2x"></i>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Ingredientes" asp-area="" asp-controller="Ingredientes" asp-action="Index">
                                    <i class="fas fa-carrot fa-2x"></i>
                                </a>
                            </li>*@

                        <li class="nav-item">
                            <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Aplivativo Delivery" asp-area="" asp-controller="Aplicativo" asp-action="Index">
                                <i class="fab fa-app-store-ios fa-2x"></i>
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Forma Pagamento" asp-area="" asp-controller="FormaPagamento" asp-action="Index">
                                <i class="fas fa-money-check-alt fa-2x"></i>
                            </a>
                        </li>

                        @*<li class="nav-item">
                                <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Caixa" asp-area="" asp-controller="Caja" asp-action="Index">
                                    <i class="fas fa-cash-register fa-2x"></i>
                                </a>
                            </li>*@

                        <li class="nav-item dropdown" data-toggle="tooltip" data-placement="right" title="Caixa">
                            <a class="m-1 nav-link  dropdown-toggle text-dark btn btn-outline-primary" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-cash-register fa-2x"></i>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Categorias" asp-action="Index">
                                    <i class="fas fa-project-diagram fa-1x mr-2"></i>Categorias
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Adicionais" asp-action="Index">
                                    <i class="fab fa-buffer fa-1x mr-2"></i>Adicionais
                                </a>
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Ingredientes" asp-action="Index">
                                    <i class="fas fa-carrot fa-1x mr-2"></i>Ingredientes
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="m-1 dropdown-item text-dark btn btn-outline-primary" asp-area="" asp-controller="Caja" asp-action="Index">
                                    <i class="fas fa-hamburger fa-1x mr-2"></i>Fechar caixa
                                </a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="m-1 nav-link text-dark btn btn-outline-primary" data-toggle="tooltip" data-placement="top" title="Pedidos" asp-area="" asp-controller="Pedidos" asp-action="Index">
                                <i class="fas fa-baby-carriage fa-2x"></i>
                            </a>
                        </li>

                    </ul>

                </div>
            </div>

        </nav>
    </header>
    <div class="p-0">
        <main role="main" class="p-0">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2020 - Pedidos - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@

    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/limonte-sweetalert2/sweetalert2.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap-switch-button/bootstrap-switch-button.min.js" asp-append-version="true"></script>
    <script src="~/lib/font-awesome/js/all.js" asp-append-version="true"></script>
    <script src="~/lib/printThis.js" asp-append-version="true"></script>
    <script src="~/lib/croppie/croppie.min.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await Html.PartialAsync("_notificationPartial")
    @RenderSection("Scripts", required: false)

</body>
</html>
